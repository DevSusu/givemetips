<div class="inner cover">
  <p class="lead"><%= image_tag "logo.png", class: "img-responsive" %></p>
  <h1 class="cover-heading">2015년 목표는 무엇인가요?</h1>
  <p class="lead">
    <%= form_for @goal do |f| %>
      <div class="input-group">
        <%= f.text_field :content, class: "form-control", placeholder: "당신의 목표를 입력해 주세요." %>
        <span class="input-group-btn">
          <%= f.submit class: "btn btn-default", value: "Go!" %>
        </span>
      </div>
    <% end %>
  </p>
</div>